generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                    String                       @id @default(uuid())
  email                 String                       @unique
  password              String
  firstName             String?
  lastName              String?
  role                  String                       @default("user")
  isActive              Boolean                      @default(true)
  failedLoginAttempts   Int                          @default(0)
  accountLockedAt       DateTime?
  lastFailedLoginAt     DateTime?
  permissions           Json?
  projects              Project[]                    @relation("ProjectOwner")
  factories             Factory[]
  designs               Design[]                     @relation("DesignCreator")
  comments              Comment[]                    @relation("CommentAuthor")
  calculations          WoodCalculation[]
  assignedWarehouses    WarehouseUser[]
  createdTransfers      Transfer[]                   @relation("TransferCreator")
  approvedTransfers     Transfer[]                   @relation("TransferApprover")
  stockAdjustments      StockAdjustment[]
  notificationSettings  NotificationSubscription[]
  createdAt             DateTime                     @default(now())
  updatedAt             DateTime                     @updatedAt

}

model Project {
  id            String    @id @default(uuid())
  name          String
  description   String?
  ownerId       String
  owner         User        @relation("ProjectOwner", fields: [ownerId], references: [id])
  isPublic      Boolean     @default(false)
  designs       Design[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

}

model Factory {
  id        String   @id @default(uuid())
  name      String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Design {
  id          String    @id @default(cuid())
  name        String
  content     Json
  thumbnail   String?
  projectId   String
  creatorId   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  project     Project   @relation(fields: [projectId], references: [id])
  creator     User      @relation("DesignCreator", fields: [creatorId], references: [id])
  comments    Comment[]

}

model Comment {
  id        String   @id @default(cuid())
  content   String
  designId  String
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  design    Design   @relation(fields: [designId], references: [id])
  author    User     @relation("CommentAuthor", fields: [authorId], references: [id])

}

enum UserRole {
  USER                // Regular user - basic access
  VIEWER             // Read-only access to warehouse data
  WAREHOUSE_STAFF    // Can create transfers, view stock for assigned warehouses
  WAREHOUSE_MANAGER  // Can approve transfers, adjust stock for assigned warehouses
  SUPERVISOR         // Factory operations approval (existing)
  ADMIN              // Full system access
}

model Job {
  id        String   @id @default(cuid())
  name      String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model ElectricityRecharge {
  id                String         @id @default(uuid())
  rechargeDate      DateTime
  token             String
  kwhAmount         Float
  totalPaid         Float
  baseCost          Float?
  vat               Float?
  ewuraFee          Float?
  reaFee            Float?
  debtCollected     Float?
  notes             String?

  // Link to drying process
  dryingProcessId   String?
  meterReadingAfter Float?        // Meter reading AFTER recharge was applied

  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  // Relations
  dryingProcess     DryingProcess? @relation(fields: [dryingProcessId], references: [id], onDelete: Cascade)

  @@index([rechargeDate])
  @@index([dryingProcessId])
}

model WoodType {
  id                   String                @id @default(uuid())
  name                 String
  description          String?
  density              Float?
  grade                String
  origin               String?
  calculations         WoodCalculation[]
  receipts             WoodReceipt[]
  operations           Operation[]
  dryingProcesses      DryingProcess[]
  dryingProcessItems   DryingProcessItem[]   // NEW: For multi-wood drying
  stock                Stock[]
  transferItems        TransferItem[]
  stockAdjustments     StockAdjustment[]
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt

}

model WoodCalculation {
  id            String    @id @default(uuid())
  userId        String
  woodTypeId    String
  thickness     Float
  width         Float
  length        Float
  pricePerPlank Float
  volumeM3      Float
  planksPerM3   Float
  pricePerM3    Float
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user          User      @relation(fields: [userId], references: [id])
  woodType      WoodType  @relation(fields: [woodTypeId], references: [id])

}

model WoodReceipt {
  id                  String   @id @default(uuid())
  woodTypeId          String
  warehouseId         String?
  supplier            String
  receiptDate         DateTime
  lotNumber           String   @unique
  purchaseOrder       String?
  status              String   @default("CREATED")
  woodFormat          String   @default("SLEEPERS") // SLEEPERS or PLANKS
  measurementUnit     String   @default("imperial") // imperial = in/ft, metric = cm
  notes               String?
  estimatedAmount     Float    @default(0)
  estimatedVolumeM3   Float?
  estimatedPieces     Int?
  actualVolumeM3      Float?
  actualPieces        Int?
  receiptConfirmedAt  DateTime?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  woodType            WoodType   @relation(fields: [woodTypeId], references: [id])
  warehouse           Warehouse? @relation(fields: [warehouseId], references: [id])
  measurements        SleeperMeasurement[]

  @@index([status])
  @@index([woodTypeId])
  @@index([warehouseId])
  @@index([createdAt])
  @@index([lotNumber])
}

model SleeperMeasurement {
  id                  String   @id @default(uuid())
  receiptId           String
  thickness           Float
  width               Float
  length              Float
  qty                 Int
  volumeM3            Float
  isCustom            Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  receipt             WoodReceipt @relation(fields: [receiptId], references: [id], onDelete: Cascade)

  @@index([receiptId])
}

model Operation {
  id                String   @id @default(uuid())
  serialNumber      String   @unique
  woodTypeId        String
  lotNumber         String
  sleeperNumber     Int?
  startTime         DateTime?
  endTime           DateTime?
  sleeperSizes      Json
  plankSizes        Json
  status            String   @default("draft") // draft, pending_approval, supervisor_approved, admin_approved, completed, rejected
  wastePercentage   Float?
  notes             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  woodType          WoodType    @relation(fields: [woodTypeId], references: [id])
  approvals         Approval[]

  @@index([status])
  @@index([woodTypeId])
  @@index([lotNumber])
  @@index([createdAt])
  @@index([sleeperNumber])
}

model DryingProcess {
  id                        String            @id @default(uuid())
  batchNumber               String            @unique

  // OLD FIELDS - Keep for backward compatibility, make nullable
  woodTypeId                String?           // Nullable for multi-wood processes
  thickness                 Float?            // Nullable for multi-wood processes
  thicknessUnit             String?           @default("mm") // "mm" or "inch" - unit used when entering thickness
  pieceCount                Int?              // Nullable for multi-wood processes

  startingHumidity          Float?            // Initial humidity percentage when starting the process
  startingElectricityUnits  Float?            // Initial electricity meter reading (kWh) when starting
  startTime                 DateTime
  endTime                   DateTime?
  status                    String            @default("IN_PROGRESS") // IN_PROGRESS, COMPLETED, CANCELLED, DAMAGED
  totalCost                 Float?
  notes                     String?

  // Stock Integration Fields
  useStock                  Boolean           @default(false) // true if using stock, false if manual entry
  sourceWarehouseId         String?           // Warehouse stock was taken from (for old single-wood processes)
  stockThickness            String?           // Thickness format from stock (1", 2", Custom) - for old processes

  // User tracking for audit trail
  createdById               String?           // User ID who created the drying process
  createdByName             String?           // User name for easy reference

  createdAt                 DateTime          @default(now())
  updatedAt                 DateTime          @updatedAt

  // Relations
  woodType          WoodType?                @relation(fields: [woodTypeId], references: [id])
  sourceWarehouse   Warehouse?               @relation(fields: [sourceWarehouseId], references: [id])
  readings          DryingReading[]
  items             DryingProcessItem[]      // NEW: Multiple wood types support
  recharges         ElectricityRecharge[]    // Luku recharges during this process

  @@index([status])
  @@index([woodTypeId])
  @@index([startTime])
  @@index([batchNumber])
  @@index([sourceWarehouseId])
  @@index([createdById])
}

model DryingProcessItem {
  id                String         @id @default(uuid())
  dryingProcessId   String
  woodTypeId        String
  thickness         String         // Stock thickness format: "1\"", "2\"", "Custom"
  pieceCount        Int
  sourceWarehouseId String         // Warehouse where stock came from

  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  // Relations
  dryingProcess     DryingProcess  @relation(fields: [dryingProcessId], references: [id], onDelete: Cascade)
  woodType          WoodType       @relation(fields: [woodTypeId], references: [id])
  sourceWarehouse   Warehouse      @relation(fields: [sourceWarehouseId], references: [id])

  @@index([dryingProcessId])
  @@index([woodTypeId])
  @@index([sourceWarehouseId])
}

model DryingReading {
  id                String         @id @default(uuid())
  dryingProcessId   String
  readingTime       DateTime       @default(now())
  electricityMeter  Float          // Luku meter reading
  humidity          Float          // Humidity percentage
  notes             String?

  // Telegram bot integration fields
  lukuMeterImageUrl    String?     // Photo of Luku/electricity meter
  humidityMeterImageUrl String?    // Photo of humidity meter
  photoTimestamp       DateTime?   // Timestamp extracted from photo EXIF data
  ocrConfidence        Float?      // OCR accuracy score (0-100%)
  source              String?      @default("MANUAL") // "MANUAL", "TELEGRAM_BOT", "WEB"

  // User tracking for audit trail
  createdById       String?        // User ID who created/saved the reading
  createdByName     String?        // User name for easy reference
  updatedById       String?        // User ID who last updated the reading
  updatedByName     String?        // User name for easy reference

  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  // Relations
  dryingProcess     DryingProcess  @relation(fields: [dryingProcessId], references: [id], onDelete: Cascade)

  @@index([dryingProcessId])
  @@index([readingTime])
  @@index([createdById])
  @@index([source])
}

model ReceiptDraft {
  id              String   @id @default(uuid())
  receiptId       String   // LOT number
  measurements    Json     // Array of sleeper measurements with lastModifiedBy/At
  measurementUnit String?  @default("imperial") // "imperial" (in/ft) or "metric" (cm)
  updatedAt       DateTime @updatedAt
  updatedBy       String   // User ID who last updated
  createdAt       DateTime @default(now())

  @@index([receiptId])
}

model ReceiptHistory {
  id        String   @id @default(uuid())
  receiptId String   // LOT number
  userId    String
  userName  String
  action    String   // CREATE, UPDATE, SUBMIT, etc.
  details   String   // Description of what changed
  timestamp DateTime @default(now())
  createdAt DateTime @default(now())

  @@index([receiptId])
  @@index([timestamp])
}

model LotCost {
  id                      String   @id @default(uuid())
  lotNumber               String   @unique
  purchasePrice           Float?   // Purchase price
  purchasePriceType       String   @default("LUMPSUM") // LUMPSUM or PER_M3
  purchasePriceIncVat     Boolean  @default(false) // Whether purchase price includes VAT
  transportPrice          Float?   // Transportation/shipping price
  transportPriceType      String   @default("LUMPSUM") // LUMPSUM or PER_M3
  transportPriceIncVat    Boolean  @default(false) // Whether transport price includes VAT
  slicingExpenses         Float?   // Slicing operation expenses
  slicingExpensesType     String   @default("LUMPSUM") // LUMPSUM or PER_M3
  slicingExpensesIncVat   Boolean  @default(false) // Whether slicing expenses include VAT
  otherExpenses           Float?   // Other miscellaneous expenses
  otherExpensesType       String   @default("LUMPSUM") // LUMPSUM or PER_M3
  otherExpensesIncVat     Boolean  @default(false) // Whether other expenses include VAT
  notes                   String?  // Additional notes about costs
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@index([lotNumber])
}

model Approval {
  id              String    @id @default(uuid())
  operationId     String
  approverRole    String    // SUPERVISOR or ADMIN
  approverId      String?   // User ID who approved/rejected
  approverName    String?   // User name who approved/rejected
  status          String    @default("pending") // pending, approved, rejected
  notes           String?   // Approval/rejection notes
  actionTakenAt   DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  operation       Operation @relation(fields: [operationId], references: [id], onDelete: Cascade)

  @@index([operationId])
  @@index([status])
  @@index([approverRole])
}

model ApprovalRule {
  id              String    @id @default(uuid())
  module          String    // WOOD_RECEIPT, WOOD_SLICER, WOOD_CALCULATOR
  conditionField  String    // variance_percentage, volume_m3, amount, pieces, etc.
  operator        String    // above, below, equals
  threshold       Float     // The threshold value
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([module])
  @@index([isActive])
}

// ===== ASSET MANAGEMENT MODELS =====

model AssetCategory {
  id          String   @id @default(uuid())
  name        String
  code        String   @unique // Category code (e.g., HT, MAC, HT-RTR, etc.)
  description String?
  parentId    String?  // For subcategories - references parent category
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  parent       AssetCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  subcategories AssetCategory[] @relation("CategoryHierarchy")
  assets       Asset[]

  @@unique([name, parentId]) // Allow same name in different parent categories
  @@index([name])
  @@index([code])
  @@index([parentId])
}

model Asset {
  id                    String    @id @default(uuid())
  assetTag              String    @unique // Unique identifier/barcode
  name                  String
  description           String?
  categoryId            String
  imageUrl              String?   // Product image URL
  productUrl            String?   // Product website/reference URL
  technicalManualUrl    String?   // Technical manual/datasheet PDF URL

  // Basic Information
  brand                 String?
  modelNumber           String?
  serialNumber          String?
  locationId            String?   // Reference to AssetLocation
  status                String    @default("ACTIVE") // ACTIVE, IN_MAINTENANCE, BROKEN, DISPOSED, RETIRED

  // Purchase Information
  purchaseDate          DateTime
  purchasePrice         Float
  supplierId            String?
  supplier              String?   // Legacy field, keeping for backward compatibility
  invoiceNumber         String?
  invoiceDocument       String?   // File path/URL

  // Warranty Information
  warrantyDurationValue Int?      // Warranty duration (number)
  warrantyDurationUnit  String?   // 'YEARS' or 'MONTHS'
  warrantyStartDate     DateTime?
  warrantyEndDate       DateTime?
  warrantyTerms         String?
  warrantyProvider      String?   // Supplier/provider of warranty

  // Lifespan
  lifespanValue         Int?      // Lifespan value (number)
  lifespanUnit          String?   // 'YEARS' or 'MONTHS'

  // Technical Specifications (flexible JSON field)
  technicalSpecs        Json?

  // Assignment
  assignedToUserId      String?
  assignedToTeam        String?
  assignedToProject     String?
  assignmentDate        DateTime?

  // Disposal Information
  disposalDate          DateTime?
  disposalMethod        String?   // SOLD, SCRAPPED, DONATED, etc.
  disposalValue         Float?
  disposalNotes         String?

  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  createdBy             String?
  updatedBy             String?

  // Relations
  category              AssetCategory        @relation(fields: [categoryId], references: [id])
  location              AssetLocation?       @relation(fields: [locationId], references: [id])
  supplierRelation      Supplier?            @relation("AssetSupplier", fields: [supplierId], references: [id])
  maintenanceRecords    AssetMaintenance[]
  documents             AssetDocument[]
  assignmentHistory     AssetAssignment[]
  transfers             AssetTransfer[]

  @@index([assetTag])
  @@index([categoryId])
  @@index([locationId])
  @@index([supplierId])
  @@index([status])
  @@index([assignedToUserId])
  @@index([purchaseDate])
}

model AssetMaintenance {
  id                  String    @id @default(uuid())
  assetId             String
  maintenanceType     String    // ROUTINE, REPAIR, EMERGENCY, INSPECTION, CALIBRATION
  scheduledDate       DateTime?
  completedDate       DateTime?
  nextDueDate         DateTime?

  // Maintenance Details
  description         String
  performedBy         String?   // Company or person who performed maintenance
  cost                Float?
  laborHours          Float?
  downtime            Float?    // Hours of downtime

  // Parts & Materials
  partsUsed           Json?     // Array of parts/materials used

  status              String    @default("SCHEDULED") // SCHEDULED, IN_PROGRESS, COMPLETED, CANCELLED
  notes               String?

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  createdBy           String?

  // Relations
  asset               Asset     @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@index([assetId])
  @@index([scheduledDate])
  @@index([nextDueDate])
  @@index([status])
}

model AssetDocument {
  id            String    @id @default(uuid())
  assetId       String
  documentType  String    // MANUAL, CERTIFICATE, PHOTO, VIDEO, CAD, INVOICE, WARRANTY, OTHER
  title         String
  description   String?
  fileUrl       String    // Path/URL to the document
  fileName      String
  fileSize      Int?      // Size in bytes
  mimeType      String?

  uploadedAt    DateTime  @default(now())
  uploadedBy    String?

  // Relations
  asset         Asset     @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@index([assetId])
  @@index([documentType])
}

model AssetAssignment {
  id              String    @id @default(uuid())
  assetId         String
  assignedToUserId String?
  assignedToTeam  String?
  assignedToProject String?
  assignedBy      String?

  assignmentDate  DateTime  @default(now())
  returnDate      DateTime?
  notes           String?

  createdAt       DateTime  @default(now())

  // Relations
  asset           Asset     @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@index([assetId])
  @@index([assignedToUserId])
  @@index([assignmentDate])
}

model Supplier {
  id            String   @id @default(uuid())
  name          String   @unique
  code          String?  @unique
  contactPerson String?
  email         String?
  phone         String?
  address       String?
  website       String?
  notes         String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  assets        Asset[]  @relation("AssetSupplier")

  @@index([name])
  @@index([code])
  @@index([isActive])
}

model AssetLocation {
  id          String   @id @default(uuid())
  name        String   @unique
  code        String   @unique // Location code (e.g., WH-01, OFF-01, PROJ-001)
  type        String   // WAREHOUSE, OFFICE, PROJECT, SITE, WORKSHOP, STORAGE, OTHER
  address     String?
  description String?
  contactPerson String?
  contactPhone  String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  assets              Asset[]
  transfersFrom       AssetTransfer[] @relation("TransferFromLocation")
  transfersTo         AssetTransfer[] @relation("TransferToLocation")

  @@index([name])
  @@index([code])
  @@index([type])
  @@index([isActive])
}

model AssetTransfer {
  id                String   @id @default(uuid())
  transferNumber    String   @unique
  assetId           String
  fromLocationId    String
  toLocationId      String
  status            String   @default("PENDING") // PENDING, IN_TRANSIT, COMPLETED, CANCELLED

  // Transfer details
  transferDate      DateTime @default(now())
  expectedArrival   DateTime?
  actualArrival     DateTime?
  reason            String?  // Reason for transfer
  notes             String?

  // User tracking
  requestedById     String
  requestedByName   String
  approvedById      String?
  approvedByName    String?
  approvedAt        DateTime?
  completedById     String?
  completedByName   String?
  completedAt       DateTime?

  // Condition tracking
  conditionBefore   String?  // Condition before transfer (EXCELLENT, GOOD, FAIR, POOR)
  conditionAfter    String?  // Condition after transfer

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  asset             Asset        @relation(fields: [assetId], references: [id], onDelete: Cascade)
  fromLocation      AssetLocation @relation("TransferFromLocation", fields: [fromLocationId], references: [id])
  toLocation        AssetLocation @relation("TransferToLocation", fields: [toLocationId], references: [id])
  history           AssetTransferHistory[]

  @@index([assetId])
  @@index([fromLocationId])
  @@index([toLocationId])
  @@index([status])
  @@index([transferDate])
  @@index([transferNumber])
}

model AssetTransferHistory {
  id              String        @id @default(uuid())
  transferId      String
  action          String        // CREATED, APPROVED, IN_TRANSIT, COMPLETED, CANCELLED
  performedById   String
  performedByName String
  notes           String?
  timestamp       DateTime      @default(now())
  createdAt       DateTime      @default(now())

  // Relations
  transfer        AssetTransfer @relation(fields: [transferId], references: [id], onDelete: Cascade)

  @@index([transferId])
  @@index([timestamp])
}

// ===== WAREHOUSE & INVENTORY MANAGEMENT MODELS =====

enum WarehouseStatus {
  ACTIVE
  ARCHIVED
}

enum TransferStatus {
  PENDING
  APPROVED
  REJECTED
  IN_TRANSIT
  COMPLETED
}

enum WoodStatus {
  NOT_DRIED
  UNDER_DRYING
  DRIED
  DAMAGED
}

enum AdjustmentReason {
  DAMAGED
  LOST
  FOUND_EXTRA
  COUNTING_ERROR
  OTHER
}

model Warehouse {
  id                  String                @id @default(uuid())
  code                String                @unique
  name                String
  address             String?
  contactPerson       String?
  stockControlEnabled Boolean               @default(false)
  requiresApproval    Boolean               @default(false)
  status              WarehouseStatus       @default(ACTIVE)
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt

  // Relations
  assignedUsers       WarehouseUser[]
  stock               Stock[]
  transfersFrom       Transfer[]            @relation("TransferFrom")
  transfersTo         Transfer[]            @relation("TransferTo")
  stockAdjustments    StockAdjustment[]
  dryingProcesses     DryingProcess[]
  dryingProcessItems  DryingProcessItem[]   // NEW: For multi-wood drying
  woodReceipts        WoodReceipt[]

  @@index([code])
  @@index([status])
}

model WarehouseUser {
  id          String    @id @default(uuid())
  warehouseId String
  userId      String
  createdAt   DateTime  @default(now())

  // Relations
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([warehouseId, userId])
  @@index([warehouseId])
  @@index([userId])
}

model Stock {
  id                  String    @id @default(uuid())
  warehouseId         String
  woodTypeId          String
  thickness           String    // "1\"", "2\"", "Custom"

  // Stock quantities by status
  statusNotDried      Int       @default(0)
  statusUnderDrying   Int       @default(0)
  statusDried         Int       @default(0)
  statusDamaged       Int       @default(0)
  statusInTransitOut  Int       @default(0)
  statusInTransitIn   Int       @default(0)

  // Alert threshold
  minimumStockLevel   Int?

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  // Relations
  warehouse           Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  woodType            WoodType  @relation(fields: [woodTypeId], references: [id])

  @@unique([warehouseId, woodTypeId, thickness])
  @@index([warehouseId])
  @@index([woodTypeId])
}

model Transfer {
  id                String         @id @default(uuid())
  transferNumber    String         @unique
  fromWarehouseId   String
  toWarehouseId     String
  status            TransferStatus @default(PENDING)
  transferDate      DateTime       @default(now())
  notes             String?        // General notes for the entire transfer

  // Approval tracking
  createdById       String
  approvedById      String?
  approvedAt        DateTime?
  completedAt       DateTime?

  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  // Relations
  fromWarehouse     Warehouse         @relation("TransferFrom", fields: [fromWarehouseId], references: [id])
  toWarehouse       Warehouse         @relation("TransferTo", fields: [toWarehouseId], references: [id])
  createdBy         User              @relation("TransferCreator", fields: [createdById], references: [id])
  approvedBy        User?             @relation("TransferApprover", fields: [approvedById], references: [id])
  items             TransferItem[]    // Multiple line items per transfer
  history           TransferHistory[] // Audit trail for all actions

  @@index([transferNumber])
  @@index([fromWarehouseId])
  @@index([toWarehouseId])
  @@index([status])
  @@index([transferDate])
  @@index([createdById])
}

model TransferItem {
  id          String     @id @default(uuid())
  transferId  String
  woodTypeId  String
  thickness   String     // "1\"", "2\"", "Custom"
  quantity    Int
  woodStatus  WoodStatus @default(NOT_DRIED)
  remarks     String?    // Specific remarks for this line item
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  transfer    Transfer   @relation(fields: [transferId], references: [id], onDelete: Cascade)
  woodType    WoodType   @relation(fields: [woodTypeId], references: [id])

  @@index([transferId])
  @@index([woodTypeId])
}

model TransferHistory {
  id              String   @id @default(uuid())
  transferId      String
  transferNumber  String   // Denormalized for easy querying
  userId          String
  userName        String   // Denormalized - firstName + lastName
  userEmail       String   // Denormalized for reference
  action          String   // CREATED, APPROVED, REJECTED, IN_TRANSIT, COMPLETED, CANCELLED
  details         String?  // Additional details about the action
  timestamp       DateTime @default(now())
  createdAt       DateTime @default(now())

  // Relations
  transfer        Transfer @relation(fields: [transferId], references: [id], onDelete: Cascade)

  @@index([transferId])
  @@index([transferNumber])
  @@index([timestamp])
  @@index([action])
}

model StockAdjustment {
  id              String            @id @default(uuid())
  warehouseId     String
  woodTypeId      String
  thickness       String            // "1\"", "2\"", "Custom"
  woodStatus      WoodStatus
  quantityBefore  Int
  quantityAfter   Int
  quantityChange  Int               // Can be negative
  reason          AdjustmentReason
  notes           String?
  adjustedById    String
  adjustedAt      DateTime          @default(now())
  createdAt       DateTime          @default(now())

  // Relations
  warehouse       Warehouse         @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  woodType        WoodType          @relation(fields: [woodTypeId], references: [id])
  adjustedBy      User              @relation(fields: [adjustedById], references: [id])

  @@index([warehouseId])
  @@index([woodTypeId])
  @@index([adjustedAt])
  @@index([adjustedById])
}

// ===== NOTIFICATION SYSTEM =====

model Notification {
  id          String    @id @default(uuid())
  userId      String    // User who should receive the notification
  type        String    // TRANSFER_CREATED, TRANSFER_APPROVED, TRANSFER_REJECTED, RECEIPT_COMPLETED, etc.
  title       String
  message     String
  linkUrl     String?   // Optional URL to navigate to when clicking notification
  isRead      Boolean   @default(false)
  createdAt   DateTime  @default(now())
  readAt      DateTime?

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@index([userId, isRead]) // Composite index for faster unread count queries
}

model NotificationEventType {
  id          String   @id @default(uuid())
  code        String   @unique // RECEIPT_COMPLETED, TRANSFER_CREATED, etc.
  name        String   // Display name: "Receipt Completed"
  description String   // "Notify when a wood receipt is completed"
  category    String   // Factory, Inventory, Assets, CRM, etc.
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([isActive])
}

model NotificationSubscription {
  id          String   @id @default(uuid())
  userId      String   // User who is subscribed
  eventType   String   // RECEIPT_COMPLETED, TRANSFER_CREATED, etc.
  inApp       Boolean  @default(true)  // Receive in-app notifications
  email       Boolean  @default(false) // Receive email notifications
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, eventType])
  @@index([userId])
  @@index([eventType])
}

// ===== WEBSITE MANAGEMENT MODELS =====

model WebsitePage {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  content     Json     // Stores page content as JSON (title, subtitle, products, etc.)
  status      String   @default("draft") // draft, published
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?
  updatedBy   String?

  @@index([slug])
  @@index([status])
}

model WebsiteFolder {
  id              String            @id @default(uuid())
  name            String
  parentId        String?           // Null for root folders
  parent          WebsiteFolder?    @relation("FolderHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  subfolders      WebsiteFolder[]   @relation("FolderHierarchy")
  files           WebsiteFile[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  createdBy       String?

  @@index([parentId])
  @@index([createdBy])
}

model WebsiteFile {
  id              String          @id @default(uuid())
  name            String          // Display name
  originalName    String          // Original uploaded filename
  fileName        String          // Actual file name on disk (unique)
  mimeType        String
  size            Int             // File size in bytes
  path            String          // Storage path relative to uploads folder
  url             String          // Public URL to access the file
  folderId        String?         // Null for root level files
  folder          WebsiteFolder?  @relation(fields: [folderId], references: [id], onDelete: Cascade)
  uploadedAt      DateTime        @default(now())
  uploadedBy      String?

  @@index([uploadedAt])
  @@index([uploadedBy])
  @@index([folderId])
}

// CRM - Newsletter Subscribers (mailing list from Coming Soon page)
model NewsletterSubscriber {
  id            String    @id @default(uuid())
  email         String    @unique
  source        String    @default("coming-soon") // Where they subscribed from
  status        String    @default("active") // active, unsubscribed
  subscribedAt  DateTime  @default(now())
  unsubscribedAt DateTime?

  @@index([email])
  @@index([status])
  @@index([subscribedAt])
}

// ===== TELEGRAM BOT MANAGEMENT MODELS =====

model TelegramMessage {
  id          String   @id @default(uuid())
  key         String   @unique // Unique identifier (e.g., "welcome_message", "help_text")
  name        String   // Display name for admin
  content     String   // Message content (supports Telegram MarkdownV2)
  description String?  // Description of when this message is used
  category    String   // START, HELP, MENU, ERRORS, CONFIRMATIONS, etc.
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  updatedBy   String?

  @@index([category])
  @@index([isActive])
  @@index([key])
}

model TelegramSetting {
  id          String   @id @default(uuid())
  key         String   @unique // Setting key (e.g., "bot_username", "allowed_users")
  value       String   // Setting value (can be JSON string for complex values)
  type        String   // STRING, NUMBER, BOOLEAN, JSON, LIST
  name        String   // Display name for admin
  description String?  // Description of what this setting does
  category    String   // GENERAL, PERMISSIONS, NOTIFICATIONS, API, etc.
  isEditable  Boolean  @default(true) // Some settings might be read-only
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  updatedBy   String?

  @@index([category])
  @@index([key])
}